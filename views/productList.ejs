<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            overflow: hidden;
        }
        h1 {
            text-align: center;
            margin: 20px 0;
            color: #333;
            font-size: 2em;
        }
        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }
        .product {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
            width: calc(25% - 20px);
            box-sizing: border-box;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            padding: 15px;
            margin-bottom: 20px;
        }
        .product:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 18px rgba(0, 0, 0, 0.2);
        }
        .product img {
            width: 100%;
            height: auto;
            border-radius: 12px;
        }
        .product h2 {
            font-size: 1.3em;
            margin: 10px 0;
            color: #333;
            text-align: center;
        }
        .product p {
            color: #555;
            font-size: 0.9em;
            line-height: 1.5;
            text-align: center;
        }
        .product-price {
            font-size: 1.1em;
            color: #e94e77;
            margin: 10px 0;
            text-align: center;
        }
        .product-date {
            color: #888;
            font-size: 0.8em;
            text-align: center;
        }
        /* Home Icon */
        .home-icon {
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 24px;
            color: #333;
            cursor: pointer;
            background-color: transparent;
            border: none;
            padding: 0;
        }
        .home-icon:hover {
            color: #e94e77;
        }
        /* Responsive Design */
        @media (max-width: 768px) {
            .product {
                width: calc(50% - 20px);
            }
        }
        @media (max-width: 480px) {
            .product {
                width: 100%;
            }
        }
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .modal-content {
            background: #fff;
            padding: 20px;
            border-radius: 12px;
            width: 90%;
            max-width: 600px;
            position: relative;
        }
        .modal img {
            width: 100%;
            border-radius: 12px;
        }
        .modal .close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 1.5em;
            color: #333;
        }
        .modal h2 {
            font-size: 1.5em;
            margin: 10px 0;
        }
        .modal p {
            color: #555;
            font-size: 1em;
            line-height: 1.5;
        }
        .modal .product-price {
            font-size: 1.3em;
            color: #e94e77;
        }
    </style>
</head>
<body>
    <!-- Home Icon -->
    <button class="home-icon">&#x1F3E0; Home</button>

    <div class="container">
        <h1>New Products</h1>
        <div class="product-list">
            <!-- Example product item -->
            <% products.reverse().forEach(product => { %>
                <div class="product" data-id="<%= product._id %>">
                    <img src="<%= product.file_url %>" alt="<%= product.product_name %>">
                    <h2><%= product.product_name %></h2>
                    <p><%= product.description %></p>
                    <p class="product-price">₹<%= product.price.toFixed(2) %></p>
                    <p class="product-date">Uploaded on: <%= new Date(product.uploaded_at).toDateString() %></p>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Modal for product details -->
    <div id="productModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <img id="modalImage" src="" alt="Product Image">
            <h2 id="modalName"></h2>
            <p id="modalDescription"></p>
            <p class="product-price" id="modalPrice"></p>
            <p id="modalDate" class="product-date"></p>
        </div>
    </div>

    <script>
        const modal = document.getElementById('productModal');
        const closeModal = document.querySelector('.modal .close');
        const products = <%= JSON.stringify(products) %>;

        function showProductDetails(product) {
            document.getElementById('modalImage').src = product.file_url;
            document.getElementById('modalName').innerText = product.product_name;
            document.getElementById('modalDescription').innerText = product.description;
            document.getElementById('modalPrice').innerText = `₹${product.price.toFixed(2)}`;
            document.getElementById('modalDate').innerText = `Uploaded on: ${new Date(product.uploaded_at).toDateString()}`;
            modal.style.display = 'flex';
        }

        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        document.querySelectorAll('.product').forEach(productDiv => {
            productDiv.addEventListener('click', () => {
                const productId = productDiv.getAttribute('data-id');
                const product = products.find(p => p._id === productId);
                showProductDetails(product);
            });
        });

        window.addEventListener('click', (event) => {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Home icon click functionality
        document.querySelector('.home-icon').addEventListener('click', () => {
            window.location.href = '/';
        });
    </script>
</body>
</html>
