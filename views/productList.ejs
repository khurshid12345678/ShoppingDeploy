<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Products</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
            box-sizing: border-box;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            font-family: 'Roboto', sans-serif;
            font-size: 2.5em;
            font-weight: bold;
            color: #333;
        }

        .home-icon {
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 30px;
            color: #4CAF50;
            cursor: pointer;
            background-color: transparent;
            border: none;
            padding: 0;
            transition: transform 0.3s ease;
        }

        .home-icon:hover {
            color: #e94e77;
            transform: scale(1.1);
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            overflow: hidden;
        }

        .filter-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .filter-container select {
            padding: 10px;
            font-size: 1em;
            margin-right: 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }

        .product {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
            width: calc(25% - 20px);
            box-sizing: border-box;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            padding: 15px;
            margin-bottom: 20px;
        }

        .product:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 18px rgba(0, 0, 0, 0.2);
        }

        .product img {
            width: 100%;
            height: auto;
            border-radius: 12px;
        }

        .product h2 {
            font-size: 1.4em;
            margin: 10px 0;
            color: #333;
            text-align: center;
            font-family: 'Roboto', sans-serif;
        }

        .product p {
            color: #555;
            font-size: 1em;
            line-height: 1.6;
            text-align: center;
            font-family: 'Arial', sans-serif;
        }

        .product-price {
            font-size: 1.2em;
            color: #e94e77;
            margin: 10px 0;
            text-align: center;
        }

        .product-date {
            color: #888;
            font-size: 0.9em;
            text-align: center;
        }

        /* Responsive Design for Mobile */
        @media (max-width: 768px) {
            .product {
                width: calc(50% - 20px);
            }

            .home-icon {
                font-size: 26px;
                left: 10px;
                top: 10px;
            }

            h1 {
                font-size: 2.2em;
            }
        }

        @media (max-width: 480px) {
            .product {
                width: 100%;
                padding: 10px;
            }

            .home-icon {
                font-size: 24px;
                left: 8px;
                top: 8px;
            }

            h1 {
                font-size: 1.8em;
            }
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background: #fff;
            padding: 20px;
            border-radius: 12px;
            width: 90%;
            max-width: 600px;
            position: relative;
        }

        .modal img {
            width: 100%;
            border-radius: 12px;
        }

        .modal .close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 1.5em;
            color: #333;
        }

        .modal h2 {
            font-size: 1.6em;
            margin: 10px 0;
            font-family: 'Roboto', sans-serif;
        }

        .modal p {
            color: #555;
            font-size: 1.1em;
            line-height: 1.6;
            font-family: 'Arial', sans-serif;
        }

        .modal .product-price {
            font-size: 1.3em;
            color: #e94e77;
        }
    </style>
</head>
<body>

    <!-- Home Icon -->
    <button class="home-icon" onclick="window.location.href='/'">&#x1F3E0; Home</button>

    <div class="container">
        <h1>New Products</h1>

        <!-- Category Filter -->
        <div class="filter-container">
            <select id="categoryFilter">
                <option value="all">All Categories</option>
                <!-- Populate categories dynamically here -->
                <option value="electronics">Electronics</option>
                <option value="clothing">Clothing</option>
                <option value="home_appliance">Home Appliances</option>
            </select>
        </div>

        <div class="product-list" id="productList">
            <!-- Dynamic products will be displayed here -->
        </div>
    </div>

    <!-- Modal for product details -->
    <div id="productModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <img id="modalImage" src="" alt="Product Image">
            <h2 id="modalName"></h2>
            <p id="modalDescription"></p>
            <p class="product-price" id="modalPrice"></p>
            <p id="modalDate" class="product-date"></p>
        </div>
    </div>

    <script>
        const modal = document.getElementById('productModal');
        const closeModal = document.querySelector('.modal .close');
        const products = <%= JSON.stringify(products) %>; // Assuming products are passed to the page

        // Function to display products
        function displayProducts(filteredProducts) {
            const productList = document.getElementById('productList');
            productList.innerHTML = ''; // Clear existing products

            filteredProducts.reverse().forEach(product => {
                const productDiv = document.createElement('div');
                productDiv.classList.add('product');
                productDiv.setAttribute('data-id', product._id);
                
                productDiv.innerHTML = `
                    <img src="${product.file_url}" alt="${product.product_name}">
                    <h2>${product.product_name}</h2>
                    <p>${product.description}</p>
                    <p class="product-price">₹${product.price.toFixed(2)}</p>
                    <p class="product-date">Uploaded on: ${new Date(product.uploaded_at).toDateString()}</p>
                `;
                
                productDiv.addEventListener('click', () => {
                    showProductDetails(product);
                });
                
                productList.appendChild(productDiv);
            });
        }

        // Function to show product details in the modal
        function showProductDetails(product) {
            document.getElementById('modalImage').src = product.file_url;
            document.getElementById('modalName').innerText = product.product_name;
            document.getElementById('modalDescription').innerText = product.description;
            document.getElementById('modalPrice').innerText = `₹${product.price.toFixed(2)}`;
            document.getElementById('modalDate').innerText = `Uploaded on: ${new Date(product.uploaded_at).toDateString()}`;
            modal.style.display = 'flex';
        }

        // Close modal
        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        // Filter products by category
        document.getElementById('categoryFilter').addEventListener('change', (e) => {
            const selectedCategory = e.target.value;
            const filteredProducts = selectedCategory === 'all' 
                ? products 
                : products.filter(product => product.category === selectedCategory);

            displayProducts(filteredProducts);
        });

        // Initial display of all products
        displayProducts(products);
    </script>
</body>
</html>
